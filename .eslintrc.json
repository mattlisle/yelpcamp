{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "arrow-parens": [2, "as-needed"],
        "no-underscore-dangle": [
            2,
            { "allow": ["_id"] }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline"
            }
        ],
        "no-unused-vars": [
            2,
            {
                "argsIgnorePattern": "^_*",
                "varsIgnorePattern": "^_*"
            }
        ]
    }
}
